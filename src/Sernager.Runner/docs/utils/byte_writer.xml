<?xml version="1.0" encoding="utf-8" ?>
<Class>
    <Description>
        <summary>
            <para>
                Utilises to write bytes to a byte array implemented by <see cref="IDisposable"/>.
            </para>
        </summary>
    </Description>

    <Constructor Name="Default">
        <summary>
            <para>
                Creates a new instance of <c><see cref="ByteWriter"/></c>.
            </para>
        </summary>
    </Constructor>

    <Constructor Name="WithBytes">
        <summary>
            <para>
                Creates a new instance of <c><see cref="ByteWriter"/></c> with the specified bytes.
            </para>
        </summary>

        <param name="bytes">The bytes to write</param>
    </Constructor>

    <InternalMethod Name="WriteBytes">
        <summary>
            <para>
                Writes a specified byte array to the byte array.
            </para>
        </summary>

        <param name="bytes">The bytes to write</param>
    </InternalMethod>

    <InternalMethod Name="WriteInt32">
        <summary>
            <para>
                Writes an <c>int</c> to the byte array.
            </para>
        </summary>

        <param name="value">The <c>int</c> to write</param>
    </InternalMethod>

    <InternalMethod Name="WriteString">
        <summary>
            <para>
                Writes a <c>string</c> to the byte array.
            </para>
        </summary>

        <param name="value">The <c>string</c> to write</param>
    </InternalMethod>

    <InternalMethod Name="GetBytes">
        <summary>
            <para>
                Gets the byte array.
            </para>
        </summary>

        <returns>
            <c>byte[]</c> - The byte array.
        </returns>
    </InternalMethod>
</Class>