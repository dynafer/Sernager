<?xml version="1.0" encoding="utf-8" ?>
<Class>
    <Description>
        <summary>
            <para>
                Provides methods for controlling the <see cref="Configurator.Config.Settings"/>.<br/>
                It is managed by <see cref="SettingBuilder"/>.
            </para>
        </summary>
    </Description>

    <Constructor>
        <summary>
            <para>
                Creates a new instance of <c><see cref="SettingManager"/></c>.<br/>
                Initializes <see cref="Configurator.Config.Settings"/> if <paramref name="name"/> doesn't exist in it.
            </para>
        </summary>

        <param name="name">The setting name</param>
    </Constructor>

    <PublicMethod Name="AddEnvFile">
        <summary>
            <para>
                Adds the data from the environment setting file to the <see cref="Configurator.Config.Settings"/>.<br/>
                Calls <see cref="setEnvData"/> to add the data from environment setting file.
            </para>
        </summary>

        <param name="filePath">The environment setting file path</param>
        <param name="option">The add option <see cref="EAddDataOption"/></param>

        <returns>
            <c><see cref="ISettingManager"/></c> - This instance.
        </returns>
    </PublicMethod>

    <PublicMethod Name="GetEnvVariableOrNull">
        <summary>
            <para>
                Gets the environment variable value by the <paramref name="key"/>.<br/>
                Returns <c>null</c> if the environment variable doesn't exist.
            </para>
        </summary>

        <param name="key">The environment variable key</param>

        <returns>
            <c><see cref="string?"/></c> - The environment variable value or <c>null</c>.
        </returns>
    </PublicMethod>

    <PublicMethod Name="GetEnvVariables">
        <summary>
            <para>
                Gets the environment variables.<br/>
            </para>
        </summary>

        <returns>
            <see cref="ReadOnlyDictionary{string, string}"/> - The environment variables.
        </returns>
    </PublicMethod>

    <PublicMethod Name="SetEnvVariable">
        <summary>
            <para>
                Sets the environment variable by the <paramref name="key"/> and <paramref name="value"/>.<br/>
                Calls <see cref="setEnvData"/> to set the environment variable.
            </para>
        </summary>

        <param name="key">The environment variable key</param>
        <param name="value">The environment variable value</param>
        <param name="option">The add option <see cref="EAddDataOption"/></param>

        <returns>
            <c><see cref="ISettingManager"/></c> - This instance.
        </returns>
    </PublicMethod>

    <PublicMethod Name="SetEnvVariables">
        <summary>
            <para>
                Sets the environment variables.<br/>
                Calls <see cref="setEnvData"/> to set the environment variables.
            </para>
        </summary>

        <param name="variables">The environment variables</param>
        <param name="option">The add option <see cref="EAddDataOption"/></param>

        <returns>
            <c><see cref="ISettingManager"/></c> - This instance.
        </returns>
    </PublicMethod>

    <PublicMethod Name="RemoveEnvVariable">
        <summary>
            <para>
                Removes the environment variable by the <paramref name="key"/>.
            </para>
        </summary>

        <param name="key">The environment variable key</param>

        <returns>
            <c><see cref="ISettingManager"/></c> - This instance.
        </returns>
    </PublicMethod>

    <PublicMethod Name="RemoveEnvVariables">
        <summary>
            <para>
                Removes the environment variables by the <paramref name="keys"/>.
            </para>
        </summary>

        <param name="keys">The environment variable keys</param>

        <returns>
            <c><see cref="ISettingManager"/></c> - This instance.
        </returns>
    </PublicMethod>

    <PrivateMethod Name="setEnvData">
        <summary>
            <para>
                Sets the environment variable by the <paramref name="key"/> and <paramref name="value"/>.
            </para>
        </summary>

        <param name="key">The environment variable key</param>
        <param name="value">The environment variable value</param>
        <param name="option">The add option <see cref="EAddDataOption"/></param>
    </PrivateMethod>
</Class>