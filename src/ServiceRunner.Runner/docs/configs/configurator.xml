<?xml version="1.0" encoding="utf-8" ?>
<Class>
    <Description>
        <summary>
            <para>
                Provides methods for configuration file with <see cref="ConfigurationMetadata"/>.<br/>
                It's static class but uses as singleton.
            </para>
        </summary>
    </Description>

    <InternalStaticMethod Name="Init">
        <summary>
            <para>
                Initializes the configurator.<br/>
            </para>
        </summary>
        <remarks>
            <para>
                Parameters:<br/>
                <param name="path">
                    <c>string</c> <paramref name="path"/> - The configuration file path.
                </param>
            </para>
        </remarks>
    </InternalStaticMethod>

    <InternalStaticMethod Name="Parse">
        <summary>
            <para>
                Parses the configuration file to configuration object.<br/>
                Uses <see cref="ConfigurationMetadata.ToBytes"/> to decrypt the configuration.
            </para>
        </summary>
        <remarks>
            <para>
                Parameters:<br/>
                <param name="path">
                    <c>string</c> <paramref name="path"/> - The configuration file path.
                </param>
            </para>
        </remarks>
    </InternalStaticMethod>

    <InternalStaticMethod Name="SaveAsFile">
        <summary>
            <para>
                Saves the configuration object to configuration file.<br/>
                Uses <see cref="ConfigurationMetadata.ToBytes"/> to encrypt the configuration.
            </para>
        </summary>
    </InternalStaticMethod>
</Class>