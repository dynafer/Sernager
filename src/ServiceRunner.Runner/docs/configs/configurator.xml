<?xml version="1.0" encoding="utf-8" ?>
<Class>
    <Description>
        <summary>
            <para>
                Provides methods for configuration file with <see cref="ConfigurationMetadata"/>.
            </para>
        </summary>
    </Description>

    <Constructor Name="Init">
        <summary>
            <para>
                Creates a new instance of <c>Configurator</c>.
            </para>
        </summary>
        <remarks>
            <para>
                Parameters:<br/>
                <param name="path">
                    <c>string</c> <paramref name="path"/> - The configuration file path.
                </param>
            </para>
        </remarks>
    </Constructor>

    <Constructor Name="WithConfig">
        <summary>
            <para>
                Creates a new instance of <c>Configurator</c> with configuration object.
            </para>
        </summary>
        <remarks>
            <para>
                Parameters:<br/>
                <param name="path">
                    <c>string</c> <paramref name="path"/> - The configuration file path.
                </param><br/>
                <param name="config">
                    <c>object</c> <paramref name="config"/> - The configuration object.
                </param>
            </para>
        </remarks>
    </Constructor>

    <InternalStaticMethod Name="Parse">
        <summary>
            <para>
                Parses the configuration file to configuration object.<br/>
                Uses <see cref="ConfigurationMetadata.ToBytes"/> to decrypt the configuration.
            </para>
        </summary>
        <remarks>
            <para>
                Parameters:<br/>
                <param name="path">
                    <c>string</c> <paramref name="path"/> - The configuration file path.
                </param>
            </para>
        </remarks>
        <returns>
            <c>Configurator</c> - The configurator instance.
        </returns>
    </InternalStaticMethod>

    <InternalMethod Name="SaveAsFile">
        <summary>
            <para>
                Saves the configuration object to configuration file.<br/>
                Uses <see cref="ConfigurationMetadata.ToBytes"/> to encrypt the configuration.
            </para>
        </summary>
    </InternalMethod>
</Class>