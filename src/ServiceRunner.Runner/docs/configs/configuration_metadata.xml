<?xml version="1.0" encoding="utf-8" ?>
<Class>
    <Description>
        <summary>
            <para>
                Helps to read or write a byte array for configuration with <see cref="Encryptor"/> implemented by <see cref="IDisposable"/>.
            </para>
        </summary>
    </Description>

    <Constructor Name="WithConfig">
        <summary>
            <para>
                Creates a new instance of <c><see cref="ConfigurationMetadata"/></c> with configuration object.
            </para>
        </summary>

        <param name="config">The configuration object.</param>
    </Constructor>

    <Constructor Name="WithByteReader">
        <summary>
            <para>
                Creates a new instance of <c><see cref="ConfigurationMetadata"/></c> with <see cref="ByteReader"/>.<br/>
                Calls <see cref="Encryptor"/> to decrypt the configuration.
            </para>
        </summary>

        <param name="byteReader">The bytes to read from.</param>
    </Constructor>

    <InternalMethod Name="ToBytes">
        <summary>
            <para>
                Converts the configuration object to bytes.<br/>
                Calls <see cref="Encryptor"/> to encrypt the configuration.
            </para>
        </summary>

        <returns>
            <c>byte[]</c> - The bytes read.
        </returns>
    </InternalMethod>
</Class>