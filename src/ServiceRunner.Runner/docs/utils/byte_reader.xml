<?xml version="1.0" encoding="utf-8" ?>
<Class>
    <Description>
        <summary>
            <para>
                Utilises to read bytes from a byte array implemented by <see cref="IDisposable"/>.
            </para>
        </summary>
    </Description>

    <Constructor>
        <summary>
            <para>
                Creates a new instance of <c><see cref="ByteReader"/></c> with the specified bytes.
            </para>
        </summary>

        <param name="bytes">The bytes to read from</param>
    </Constructor>

    <InternalMethod Name="ReadBytes">
        <summary>
            <para>
                Reads a specified length of bytes from the byte array.
            </para>
        </summary>

        <param name="length">The length of bytes to read</param>

        <returns>
            <c>byte[]</c> - The bytes read.
        </returns>
    </InternalMethod>

    <InternalMethod Name="ReadInt32">
        <summary>
            <para>
                Reads an <c>int</c> from the byte array.
            </para>
        </summary>

        <returns>
            <c>int</c> - The <c>int</c> read.
        </returns>
    </InternalMethod>

    <InternalMethod Name="ReadString">
        <summary>
            <para>
                Reads a <c>string</c> from the byte array.
            </para>
        </summary>

        <returns>
            <c>string</c> - The <c>string</c> read.
        </returns>
    </InternalMethod>

    <InternalMethod Name="Skip">
        <summary>
            <para>
                Skips a specified length of bytes from the byte array.
            </para>
        </summary>

        <param name="length">The length of bytes to skip</param>
    </InternalMethod>
</Class>