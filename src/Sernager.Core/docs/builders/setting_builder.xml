<?xml version="1.0" encoding="utf-8" ?>
<Class>
    <Description>
        <summary>
            <para>
                Provides methods for controlling the names of settings and <see cref="SettingManager"/>s.
            </para>
        </summary>
    </Description>

    <Constructor>
        <summary>
            <para>
                Creates a new instance of <c><see cref="SettingBuilder"/></c>.
            </para>
        </summary>

        <exception cref="InvalidOperationException">
            Thrown when called not from <see cref="SernagerBuilder"/>.
        </exception>
    </Constructor>

    <PublicMethod Name="AddSettingName">
        <summary>
            <para>
                Adds the setting name to the <see cref="Configurator.Config.SettingNames"/>.
            </para>
        </summary>

        <param name="name">The setting name</param>
        <param name="option">The add option <see cref="EAddDataOption"/></param>

        <returns>
            <c><see cref="ISettingBuilder"/></c> - This instance.
        </returns>
    </PublicMethod>

    <PublicMethod Name="AddSettingNames" Type="WithDefaultOption">
        <summary>
            <para>
                Adds the setting names to the <see cref="Configurator.Config.SettingNames"/>.<br/>
                Calls <see cref="AddSettingName"/> for each setting name.
            </para>
        </summary>

        <param name="names">The setting names</param>

        <returns>
            <c><see cref="ISettingBuilder"/></c> - This instance.
        </returns>
    </PublicMethod>

    <PublicMethod Name="AddSettingNames" Type="WithGivenOption">
        <summary>
            <para>
                Adds the setting names to the <see cref="Configurator.Config.SettingNames"/>.<br/>
                Calls <see cref="AddSettingName"/> for each setting name.
            </para>
        </summary>

        <param name="names">The setting names</param>
        <param name="option">The add option <see cref="EAddDataOption"/></param>

        <returns>
            <c><see cref="ISettingBuilder"/></c> - This instance.
        </returns>
    </PublicMethod>

    <PublicMethod Name="RemoveSettingName">
        <summary>
            <para>
                Removes the setting name from the <see cref="Configurator.Config.SettingNames"/>.
            </para>
        </summary>

        <param name="name">The setting name</param>

        <returns>
            <c><see cref="ISettingBuilder"/></c> - This instance.
        </returns>
    </PublicMethod>

    <PublicMethod Name="RemoveSettingNames">
        <summary>
            <para>
                Removes the setting names from the <see cref="Configurator.Config.SettingNames"/>.<br/>
                Calls <see cref="RemoveSettingName"/> for each setting name.
            </para>
        </summary>

        <param name="names">The setting names</param>

        <returns>
            <c><see cref="ISettingBuilder"/></c> - This instance.
        </returns>
    </PublicMethod>

    <PublicMethod Name="UseManager">
        <summary>
            <para>
                Uses the <see cref="SettingManager"/> to manage the setting.<br/>
                Creates a setting name if <see cref="Configurator.Config.SettingNames"/> does not contain the <paramref name="name"/>.<br/>
                Creates a new instance of <see cref="SettingManager"/> if <see cref="mSettingManagers"/> does not contain the <paramref name="name"/>.
            </para>
        </summary>

        <param name="name">The setting name</param>

        <returns>
            <c><see cref="ISettingManager"/></c> - The new instance or existing manager instance in <see cref="mSettingManagers"/>.
        </returns>
    </PublicMethod>
</Class>