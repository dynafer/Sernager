<?xml version="1.0" encoding="utf-8" ?>
<Class>
    <Description>
        <summary>
            <para>
                Provides methods for configuration file with <see cref="ConfigurationMetadata"/>.<br/>
                It's static class but uses as singleton.
            </para>
        </summary>
    </Description>

    <InternalStaticMethod Name="Init">
        <summary>
            <para>
                Initializes the configurator.<br/>
            </para>
        </summary>

        <param name="path">The configuration file path</param>
    </InternalStaticMethod>

    <InternalStaticMethod Name="Parse">
        <summary>
            <para>
                Parses the configuration file to <see cref="Configuration"/>.<br/>
                Uses <see cref="ConfigurationMetadata.ToBytes"/> to decrypt the configuration bytes.
            </para>
        </summary>

        <param name="path">The configuration file path</param>
    </InternalStaticMethod>

    <InternalStaticMethod Name="UseAutoSave">
        <summary>
            <para>
                Saves the <see cref="Configuration"/> automatically when exit.<br/>
                Calls <see cref="SaveAsFile"/>.
            </para>
        </summary>
    </InternalStaticMethod>

    <InternalStaticMethod Name="SaveAsFile">
        <summary>
            <para>
                Saves the <see cref="Configuration"/> to configuration file.<br/>
                Uses <see cref="ConfigurationMetadata.ToBytes"/> to encrypt the <see cref="Configuration"/>.
            </para>
        </summary>
    </InternalStaticMethod>
</Class>